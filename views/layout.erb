<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Moments</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="stylesheets/main.css">
</head>
<body>

  <h3><a href="/">HOME</a></h3>
  <% if logged_in? %>
  <h3><a href="/moments/new">Post</a></h3>
  <h3><a href="/users/<%=user['id']%>/moments">My Moments</a></h3>
  <% end %>

  <% if logged_in? %>
    <% if loggedin_user()["user_name"] && loggedin_user()["user_name"]!= "" %>
      Welcome back <a href="/users/<%=user['id']%>/edit"><%= loggedin_user()["user_name"]%></a>
    <%else%>
      Welcome back <a href="/users/<%=user['id']%>/edit"><%= loggedin_user()["email"]%></a>
    <%end%>

    <form action="/login" method="post">
        <input type="hidden" name="_method" value="delete">
        <button>logout</button>
      </form>

  <% else %>
    <h3><a href="/login">Log In</a></h3>
    <h3><a href="/signup">Sign Up</a></h3>
  <% end %>  


  <%= yield %>



</body>
</html>
